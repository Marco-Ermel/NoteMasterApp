<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartNote.Maui.ViewModels"
             x:Class="SmartNote.Maui.Views.StoryScenesView"
             x:DataType="vm:StoryScenesViewModel"
             BackgroundColor="{StaticResource BackgroundLight}">
    
    <!-- StoryScenesView - Feature showcase with story scenes -->
    
    <ScrollView Padding="48">
        <VerticalStackLayout Spacing="64" HorizontalOptions="Center">
            
            <!-- Header -->
            <Label Text="SmartNote in Aktion"
                   Style="{StaticResource LargeTitleStyle}"
                   HorizontalOptions="Center" />
            
            <!-- Story Scenes -->
            <CollectionView ItemsSource="{Binding Scenes}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:StoryScene">
                        <VerticalStackLayout Spacing="24" Margin="0,0,0,64">
                            
                            <!-- Image Placeholder -->
                            <Border BackgroundColor="{StaticResource PrimaryLightest}"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 16"
                                    HeightRequest="400"
                                    WidthRequest="1000"
                                    HorizontalOptions="Center">
                                <Label Text="ðŸ“·"
                                       FontSize="72"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            
                            <!-- Description Card -->
                            <Border BackgroundColor="{Binding IsDarkTheme, Converter={StaticResource DarkThemeColorConverter}}"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 12"
                                    Padding="32"
                                    WidthRequest="800"
                                    HorizontalOptions="Center">
                                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                                    <Label Text="{Binding Title}"
                                           FontFamily="Arial"
                                           FontSize="26"
                                           HorizontalOptions="Center"
                                           TextColor="{Binding IsDarkTheme, Converter={StaticResource DarkThemeTextConverter}}" />
                                    <Label Text="{Binding Description}"
                                           FontFamily="Arial"
                                           FontSize="17"
                                           LineHeight="1.45"
                                           HorizontalOptions="Center"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{Binding IsDarkTheme, Converter={StaticResource DarkThemeSecondaryTextConverter}}" />
                                </VerticalStackLayout>
                            </Border>
                            
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Features Grid -->
            <Border BackgroundColor="{StaticResource PrimaryLightest}"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 16"
                    Padding="48"
                    WidthRequest="1000"
                    HorizontalOptions="Center">
                <VerticalStackLayout Spacing="32">
                    
                    <Label Text="SmartNote Desktop Features"
                           FontFamily="Arial"
                           FontSize="32"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource TextPrimary}" />
                    
                    <FlexLayout Wrap="Wrap"
                                JustifyContent="Center"
                                BindableLayout.ItemsSource="{Binding Features}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="vm:FeatureItem">
                                <Border BackgroundColor="{StaticResource BackgroundLight}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 12"
                                        Padding="24"
                                        WidthRequest="280"
                                        Margin="12">
                                    <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                                        <Border BackgroundColor="{StaticResource PrimaryLight}"
                                                StrokeThickness="0"
                                                WidthRequest="48"
                                                HeightRequest="48"
                                                StrokeShape="RoundRectangle 24"
                                                HorizontalOptions="Center">
                                            <Label Text="{Binding Number}"
                                                   FontFamily="Arial"
                                                   FontSize="20"
                                                   TextColor="{StaticResource TextOnDark}"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>
                                        <Label Text="{Binding Title}"
                                               FontFamily="Arial"
                                               FontSize="18"
                                               HorizontalOptions="Center"
                                               TextColor="{StaticResource TextPrimary}" />
                                        <Label Text="{Binding Description}"
                                               FontFamily="Arial"
                                               FontSize="14"
                                               LineHeight="1.45"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               TextColor="{StaticResource TextSecondary}" />
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                    
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentView>

